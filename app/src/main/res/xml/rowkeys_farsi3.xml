<merge xmlns:latin="http://schemas.android.com/apk/res-auto">
    <switch>
        <case latin:keyboardLayoutSetElement="alphabet|alphabetAutomaticShifted|alphabetShiftLocked">
            <!-- U+0638: "ظ" ARABIC LETTER ZAH
                 U+0637: "ط" ARABIC LETTER TAH -->
            <Key
                latin:keySpec="&#x0637;"
                latin:keyHintLabel="&#x0638;"
                latin:additionalMoreKeys="&#x0638;" />
        </case>

        <default>
            <!-- U+0638: "ظ" ARABIC LETTER ZAH -->
            <Key latin:keySpec="&#x0638;" />
        </default>
    </switch>
    <switch>
        <case latin:keyboardLayoutSetElement="alphabet|alphabetAutomaticShifted|alphabetShiftLocked">
            <!-- U+0698: "ژ" ARABIC LETTER JEH
                 U+0632: "ز" ARABIC LETTER ZAIN -->
            <Key
                latin:keySpec="&#x0632;"
                latin:keyHintLabel="&#x0698;"
                latin:additionalMoreKeys="&#x0698;" />
        </case>

        <default>
            <!-- U+0698: "ژ" ARABIC LETTER JEH -->
            <Key latin:keySpec="&#x0698;" />
        </default>
    </switch>
    <!-- U+0631: "ر" ARABIC LETTER REH -->
    <Key latin:keySpec="&#x0631;" />
    <switch>
        <case latin:keyboardLayoutSetElement="alphabet|alphabetAutomaticShifted|alphabetShiftLocked">
            <!-- U+0630: "ذ" ARABIC LETTER THAL
                 U+062F: "د" ARABIC LETTER DAL -->
            <Key
                latin:keySpec="&#x062F;"
                latin:keyHintLabel="&#x0630;"
                latin:additionalMoreKeys="&#x0630;" />
        </case>

        <default>
            <!-- U+0630: "ذ" ARABIC LETTER THAL -->
            <Key latin:keySpec="&#x0630;" />
        </default>
    </switch>
    <switch>
        <case latin:keyboardLayoutSetElement="alphabet|alphabetAutomaticShifted|alphabetShiftLocked">
            <!-- U+0648: "و" ARABIC LETTER WAW
                 U+0624: "ؤ" ARABIC LETTER WAW WITH HAMZA ABOVE -->
            <Key
                latin:keySpec="&#x0648;"
                latin:keyHintLabel="&#x0624;"
                latin:additionalMoreKeys="&#x0624;" />
        </case>

        <default>
            <!-- U+0624: "ؤ" ARABIC LETTER WAW WITH HAMZA ABOVE -->
            <Key latin:keySpec="&#x0624;" />
        </default>
    </switch>
    <switch>
        <case latin:keyboardLayoutSetElement="alphabet|alphabetAutomaticShifted|alphabetShiftLocked">
            <!-- U+06A9: "ک" ARABIC LETTER KEHEH
                 U+0643: "ك" ARABIC LETTER KAF -->
            <Key
                latin:keySpec="&#x06A9;"
                latin:keyHintLabel="&#x0643;"
                latin:additionalMoreKeys="&#x0643;" />
        </case>

        <default>
            <!-- U+0643: "ك" ARABIC LETTER KAF -->
            <Key latin:keySpec="&#x0643;" />
        </default>
    </switch>
    <!-- U+06AF: "گ" ARABIC LETTER GAF -->
    <Key latin:keySpec="&#x06AF;" />
</merge>
